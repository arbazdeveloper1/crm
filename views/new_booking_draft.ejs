    let MailSendButton = document.getElementById('MailSendButton');
    MailSendButton.addEventListener('click', (e) => {
      e.preventDefault();
      let fromEmail = document.getElementById('fromemail').value;
    let Emailsubject = document.getElementById('mailsubject').value;
    let toEmail = document.getElementById('email').value;
    let emailTypeAuth = document.getElementById('emailTypeAuth').value;
    let customer_id = document.getElementById('customer_id').value;

    $.ajax({
      url: '/api/send_email',
      method: 'POST',
      data: {
        fromEmail: fromEmail,
        subject: Emailsubject,
        toEmail: toEmail,
        emailTypeAuth: emailTypeAuth,
        customer_id: customer_id
      },
      success: (response) => {
        console.log(response);
      },
      error: (error) => {
        console.log(error);
      }
    });
  });

// update currency
