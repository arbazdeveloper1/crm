  <script>
    function updateTime() {
      const now = new Date();
      const options = {
        timeZone: "America/New_York",
        year: "numeric",
        month: "long",
        day: "numeric",
        hour: "2-digit",
        minute: "2-digit",
        second: "2-digit",
        hour12: true
      };
  
      let formattedTime = new Intl.DateTimeFormat("en-US", options).format(now);
      
      // Adjust format to match "March 5, 2025 at 2:55:45 pm"
      formattedTime = formattedTime.replace(",", "") // Remove extra comma
                                  .replace("AM", "am")
                                  .replace("PM", "pm");
      
      document.getElementById("currentTime").innerText = formattedTime;
    }
  
    // Update the time every second
    setInterval(updateTime, 1000);
  
    // Initialize time on page load
    updateTime();
  </script>
